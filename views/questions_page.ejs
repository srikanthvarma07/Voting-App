<!DOCTYPE html>
<html lang="en">

<head>
    <!-- this is the new question page -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" type="image/x-icon" href="/img/vote.png">
    <script>
        //function for deleting option
        var tokens = document.querySelector('meta[name="csrf-token"]').getAttribute("content");
        function deleteOptionHere(optionID) {
            fetch(`/options/${optionID}`, {
                method: "delete",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    "_csrf": tokens
                })
            }).then((res1) => {
                if (res1.ok) {
                    window.location.reload();
                }
            }).catch((err1) => console.error(err1))
        }
    </script>
    <link rel="stylesheet">
    <title>
        <%= title %>
    </title>
    <style>
        body {
            background-size: cover;
        }

        .one {
            display: flex;
            flex-direction: col;
            overflow: hidden;
        }

        .two {
            display: flex;
            flex-direction: col;
            overflow: hidden;
        }

        .three {
            display: flex;
            flex-direction: col;
            overflow: hidden;
        }
    </style>
</head>

<body class="bg-gray-50" background="img/image.jpg">
    <%- include('header.ejs') %>
        <!-- including header file -->

        <div class="flex gap-1 mx-10 mt-6 bg-green-200">
            <span>--></span>
            <a href="/elections" class="text-cyan-800 hover:text-cyan-600 font-serif">All Elections</a>
            <span>--></span>
            <a href="/elections/<%= id %>/" class="text-cyan-800 hover:text-cyan-600 font-serif">Election</a>
            <span>--></span>
            <a href="/elections/<%= id %>/questions" class="text-cyan-800 hover:text-cyan-600 font-serif">Questions</a>
        </div>

        <div class="grid grid-cols-6 bg-yellow-200">
            <div class="col-start-2 col-span-4">
                <div class="rounded-lg px-6 py-3">
                    <% if (messages && messages.error && messages.error.length> 0) { %>
                        <% for(var i=0; i<messages.error.length; i++) { %>
                            <p class="bg-white my-3 list-none rounded-md px-4 py-2 font-serif">
                                <%= messages.error[i] %>
                            </p>
                            <% } %>
                                <% } %>
                </div>
                <div class="px-2 py-2">
                    <h3 class="text-2xl my-2 font-serif">
                        <%= title %>
                    </h3>
                    <p class="text-cyan-800 text-md my-2 font-serif">
                        <%= description %>
                    </p>
                </div>
                <div class="ml-12 flex flex-col">
                    <ol class="list-decimal">
                        <% for(let i=0; i<options.length; i++) { %>
                            <li class="option-item">
                                <div class="justify-between w-full my-2 px-2 py-1 rounded-lg bg-green-100">
                                    <p class="ml-2 text-lg font-serif">
                                        <%= options[i].choice %>
                                    </p>
                                    <div class="flex floex-col gap-2 text-cyan-800">
                                        <div
                                            class="rounded w-fit px-2 py-1 flex gap-2 cursor-pointer hover:text-cyan-600">
                                            <?xml version="1.0" encoding="UTF-8"?><svg width="45" height="45"
                                                viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <rect width="48" height="48" fill="white" fill-opacity="0.01" />
                                                <path
                                                    d="M42 26V40C42 41.1046 41.1046 42 40 42H8C6.89543 42 6 41.1046 6 40V8C6 6.89543 6.89543 6 8 6L22 6"
                                                    stroke="#333" stroke-width="1" stroke-linecap="round"
                                                    stroke-linejoin="round" />
                                                <path d="M14 26.7199V34H21.3172L42 13.3081L34.6951 6L14 26.7199Z"
                                                    fill="none" stroke="#333" stroke-width="1"
                                                    stroke-linejoin="round" />
                                            </svg>
                                            <a href="/elections/<%= id %>/questions/<%= questionID %>/options/<%= options[i].id %>/edit"
                                                class="text-sm font-serif">>Edit option</a>
                                        </div>
                                        <div
                                            class="rounded w-fit px-2 py-1 flex gap-2 cursor-pointer hover:text-cyan-600">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                                <path
                                                    d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zm2.46-7.12l1.41-1.41L12 12.59l2.12-2.12 1.41 1.41L13.41 14l2.12 2.12-1.41 1.41L12 15.41l-2.12 2.12-1.41-1.41L10.59 14l-2.13-2.12zM15.5 4l-1-1h-5l-1 1H5v2h14V4z" />
                                            </svg>

                                            <a onclick="deleteOptionHere(<%= options[i].id %>)"
                                                class="text-sm hover:text-indigo-900">>Delete option</a>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <% } %>
                    </ol>
                </div>
                <!-- form for posting -->
                <form action="/elections/<%= id %>/questions/<%= questionID %>" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <div class="flex flex-col gap-2 py-4">
                        <div class="flex-auto">
                            <input type="text" name="option" placeholder="Enter an option"
                                class="border border-gray-300 text-gray-900 w-full rounded p-2 text-sm" required />
                        </div>
                        <div class="flex-none">
                            <button type="submit"
                                class="bg-cyan-600 text-white px-5 py-1.5 rounded mr-2 mb-2 hover:text-indigo-900">+ Add
                                option</button>
                        </div>
                        <div class="flex-none">
                            <a type="submit" href="/elections/<%= id %>/questions"
                                class="bg-cyan-600 text-white px-5 py-1.5 rounded mr-2 mb-2 hover:text-indigo-900"> &lt;
                                -- Go Back</a>
                        </div>
                    </div>
                </form>
                <!-- if number of options == 0 -->
                <p class="text-cyan-800">
                    <%= (options.length==0)?"No options added":"" %>
                </p>
            </div>
        </div>
</body>

</html>