<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" type="image/x-icon" href="/img/vote.png">
    <title>Edit question</title>
    <script>
        //update a question function
        var token = document.querySelector('meta[name="csrf-token"]').getAttribute("content");
        function updateAQuestion() {
            let electionID = <%= electionID %>;
            let questionID = <%= questionID %>;
            let question = document.getElementById("questionName").value;
            let description = document.getElementById("description").value;
            fetch(`/questions/${questionID}/edit`, {
                method: "put",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    "_csrf": token,
                    "questionName": question,
                    "description": description
                })
            }).then((res1) => {
                if (res1.ok) {
                    window.location.replace(`/elections/${electionID}/questions`);
                }
            }).catch((err31) => console.error(err31))
        }
    </script>
    <style>
        body {
            background-size: cover;
        }

        #round {
            border-radius: 50px;
        }

        .one {
            display: flex;
            flex-direction: column;
            overflow: hidden;

        }

        .two {
            display: flex;
            flex-direction: row;
        }

        .six {

            border: 2px solid aqua;
        }

        .seven {

            border: 2px solid aqua;
        }
    </style>
</head>

<body class="bg-gray-50" background="img/image.jpg">
    <%- include('header.ejs') %>
        <!-- breadcrumbs -->
        <div class="flex gap-1 mx-10 mt-6 bg-green-200">
            <span>--></span>
            <a href="/elections" class="text-cyan-800 hover:text-cyan-600 font-serif">All Elections</a>
            <span>--></span>
            <a href="/elections/<%= electionID %>/" class="text-cyan-800 hover:text-cyan-600 font-serif">Election</a>
            <span>--></span>
            <a href="/elections/<%= electionID %>/questions"
                class="text-cyan-800 hover:text-cyan-600 font-serif">Questions</a>
        </div>
        <div class="one text-gray-800 antialiased bg-yellow-200 py-7 sm:py-14">
            <div class=" py-3 sm:w-96 text-center">
                <span
                    class="text-2xl font-light font-serif hover:text-indigo-900 text-red 	text-decoration-line: underline text-black">Edit
                    question</span>
                <div>
                    <% if (messages && messages.error && messages.error.length> 0) { %>
                        <% for(var i=0; i<messages.error.length; i++) { %>
                            <p class="bg-white my-3 list-none rounded-md px-4 py-2 font-serif">
                                <%= messages.error[i] %>
                            </p>
                            <% } %>
                                <% } %>
                </div>
                <div class="mt-4 shadow-md rounded-lg text-left">
                    <div class="px-8 py-6">
                        <!-- question and description -->
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                        <label for="questionName"
                            class="block mt-3 font-semibold font-serif text-black">Question</label>
                        <input value="<%= questionName %>" id="questionName" name="questionName" type="text"
                            placeholder="Question"
                            class="six border w-full h-5 px-3 py-5 mt-2 hover:outline-none focus:outline-none focus:ring-indigo-500 focus:ring-1 rounded-md"
                            required>
                        <label for="description"
                            class="block mt-3 font-semibold font-serif text-black">Description</label>
                        <textarea id="description" name="description"
                            class="six border w-full px-2 py-1 mt-2 hover:outline-none focus:outline-none focus:ring-indigo-500 focus:ring-1 rounded-md font-serif"
                            placeholder="Question Description" rows="8" cols="20"><%= description %></textarea>
                        <button id="round"
                            class="mt-6 w-full bg-cyan-500 text-white py-2 px-6 rounded-md hover:bg-cyan-600 font-serif hover:text-indigo-900"
                            onclick="updateAQuestion()">Update question</button>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>